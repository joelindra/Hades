#!/usr/bin/bash

# Color Definitions
RED='\e[31m'
CYAN='\e[36m'
GREEN='\e[32m'
YELLOW='\e[93m'
RESET='\e[0m'


# Function to display help message
display_help() {
    echo -e "$CYAN"
    echo -e "Usage: ./hades [options]"
    echo -e "Created by $GREEN joelindra | $YELLOW Linkedin: joelindra $RESET"
    echo -e "\nAvailable Options:"
    echo -e "  $CYAN-s, $GREEN --single-recon        $CYAN Single Recon"
    echo -e "  $CYAN-d, $GREEN --mass-recon          $CYAN Mass Recon"
    echo -e "  $CYAN-l, $GREEN --mass-js-finder      $CYAN Mass JS Finder"
    echo -e "  $CYAN-o, $GREEN --single-sql-inject   $CYAN Single SQL Injection"
    echo -e "  $CYAN-p, $GREEN --mass-sql-inject     $CYAN Mass SQL Injection"
    echo -e "  $CYAN-x, $GREEN --single-xss          $CYAN Single XSS Injection"
    echo -e "  $CYAN-w, $GREEN --mass-xss            $CYAN Mass XSS Injection"
    echo -e "  $CYAN-n, $GREEN --single-lfi          $CYAN Single LFI Injection"
    echo -e "  $CYAN-m, $GREEN --mass-assessment     $CYAN Mass Assessment"
    echo -e "  $CYAN-y, $GREEN --sub-takeover        $CYAN Subdomain Takeover"
    echo -e "  $CYAN-q, $GREEN --dirsearch-patrol    $CYAN Dirsearch Patrol"
    echo -e "  $CYAN-k, $GREEN --apk-enum            $CYAN APK Enumeration"
    echo -e "  $CYAN-v, $GREEN --mass-dom-xss        $CYAN Mass DOM XSS Exploit"
    echo -e "  $CYAN-i, $GREEN --install-requirements$CYAN Install Requirements (Important)"
    echo -e "  $CYAN-h, $GREEN --help                $CYAN Display this help message"
    echo -e "$RESET"
}

# Function to handle the main logic based on options
handle_option() {
    case "$1" in
        -s|--single-recon) source "./function/singlerecon.sh" ;;
        -d|--mass-recon) source "./function/massrecon.sh" ;;
        -l|--mass-js-finder) source "./function/massjsfinder.sh" ;;
        -o|--single-sql-inject) source "./function/ssqlinject.sh" ;;
        -p|--mass-sql-inject) source "./function/masssqlinject.sh" ;;
        -x|--single-xss) source "./function/singlexss.sh" ;;
        -w|--mass-xss) source "./function/massxss.sh" ;;
        -n|--single-lfi) source "./function/singlelfi.sh" ;;
        -m|--mass-assessment) source "./function/massassessment.sh" ;;
        -y|--sub-takeover) source "./function/subover.sh" ;;
        -q|--dirsearch-patrol) source "./function/dirsearchpatrol.sh" ;;
        -k|--apk-enum) source "./function/apkenum.sh" ;;
        -v|--mass-dom-xss) source "./function/massdomxss.sh" ;;
        -i|--install-requirements) source "./function/installreq.sh" ;;
        -h|--help) display_help; exit 0 ;;
        *) echo -e "${RED}Invalid option: $1${RESET}"; display_help; exit 1 ;;
    esac
}

# Main program starts here
if [[ $# -eq 0 ]]; then
    display_help
    exit 0
fi

# Loop through options passed to the script
for option in "$@"; do
    handle_option "$option"
done
